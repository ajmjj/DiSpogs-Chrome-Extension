{
  "manifest_version": 3,
  "name": "DiSpogs Trial v3",
  "description": "Discogs relase Spotify searcher",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://*.discogs.com/release/*"],
      "js": ["content_script.js", "spotify-web-api.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DiSpogs"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
